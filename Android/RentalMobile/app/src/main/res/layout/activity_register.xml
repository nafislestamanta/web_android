<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <View
        android:id="@+id/topView_Regist"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2_Regist"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView_Regist" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        app:srcCompat="@drawable/ic_person"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@id/imageView"
        android:layout_toLeftOf="@id/imageView"
        android:text="Register"
        android:textColor="@color/whiteTextColor"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        style="@style/linearParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2_Regist"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/editTextNama"
            style="@style/modifiedEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:hint="Nama Lenkap"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/editTextEmail"
            style="@style/modifiedEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_border"
            android:hint="@string/login_email_hint"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_marginTop="16dp"
            style="@style/modifiedEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/login_password_hint"
            android:background="@drawable/round_border"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"/>

        <EditText
            android:id="@+id/editTextRepeatPassword"
            android:layout_marginTop="16dp"
            style="@style/modifiedEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Konfirmasi Password"
            android:background="@drawable/round_border"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"/>

        <Button
            android:id="@+id/cirLoginButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:background="@drawable/round_bg"
            android:text="Daftar"
            android:textColor="@color/whiteCardColor"
            android:textStyle="bold"/>

        <TextView
            style="@style/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="Sudah punya akun? Klik disini untuk Masuk"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold" />
<!--        android:onClick="viewRegisterClicked"-->
    </LinearLayout>
</RelativeLayout>